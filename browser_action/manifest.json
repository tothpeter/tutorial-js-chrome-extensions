{
  "manifest_version": 2,
  "name": "browser_action",
  "version": "0.0.1",
  "description": "An example browser action extension",
  "author": "Toma",
  "browser_action": {
    "default_title": "Use this to open the popup",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  }
}